{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block content %}

{% if app.user %}
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    not logged in
{% endif %}
{% endblock %}